<h1>All blog posts</h1>
<br>
<p><%= link_to 'Create new blog post', new_article_path, class: "btn btn-primary" %></p>
 
<table>
  <tr>
    <th></th>
    <th></th>
    <th colspan="3"></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
        <td>
         <h3><br><%= article.title %><br></h3>
          <div></div>><p><%= render article.pictures.limit(1) %></p><br></div>
          <p>
           <%= link_to 'View', article_path(article) %> |
           <%= link_to 'Edit', edit_article_path(article) %> |
           <%= link_to 'Remove', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this blog post?' } %>
          <br>
          </p>
        </td> 
    </tr>
  <% end %>
</table>
